generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Example {
  id                 String    @id @default(uuid())
  bizAvatarUrl       String? // URL ou caminho de imagem
  bizButtonLabel     String? // Texto do botão
  bizCalendarDate    DateTime? // Data selecionada
  bizCardContent     String? // Conteúdo textual do card
  bizCheckboxChecked Boolean? // Estado do checkbox
  bizFormData        Json? // Dados do formulário (JSON)
  bizInputValue      String? // Valor do input
  bizLabelText       String? // Texto do label
  bizPopoverContent  String? // Conteúdo do popover
  bizProgressValue   Int? // Valor do progresso
  bizRadioGroupValue String? // Valor selecionado
  bizSelectValue     String? // Valor selecionado
  bizSliderValue     Int? // Valor do slider
  bizSwitchChecked   Boolean? // Estado do switch
  bizTextareaValue   String? // Texto do textarea
  bizTooltipContent  String? // Conteúdo do tooltip
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model UserRegistration {
  id String @id @default(uuid())

  // Avatar
  avatarUrl String? // URL da foto de perfil

  // Basic Information
  firstName String // Nome (mínimo 2 caracteres)
  lastName  String // Sobrenome (mínimo 2 caracteres)
  email     String @unique // Email único

  // Date of Birth
  dateOfBirth DateTime // Data de nascimento

  // Gender (enum)
  gender Gender // Gênero: male, female, other

  // Country
  country String // Código ou nome do país

  // Bio
  bio String // Biografia (10-500 caracteres)

  // Preferences (boolean flags)
  receiveNewsletter Boolean @default(false) // Receber newsletter
  receivePromotions Boolean @default(false) // Receber promoções

  // Notifications (boolean flags)  
  emailNotifications Boolean @default(true) // Notificações por email
  smsNotifications   Boolean @default(false) // Notificações por SMS

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_registrations")
}

// Enum para Gender
enum Gender {
  male
  female
  other
}
